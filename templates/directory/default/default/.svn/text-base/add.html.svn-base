<!DOCTYPE html>
<html>
	<head>
		<title>LBE</title>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<link rel="stylesheet" type="text/css" href="/static/css/bootstrap.css" />
		<link rel="stylesheet" type="text/css" href="/static/css/style.css" />
	</head>
	<body>
	  {% include "directory/default/menu-top.html" %}
	  {% include "directory/default/menu-left.html" %}
	   <div class="content">
		 {# changeit! #}
		{% if typeMessage == 1 %}
			<div class="alert alert-error fade in"><button class="close" data-dismiss="alert">×</button><center>{{message|safe}}</center></div>
		{% elif typeMessage == 0 %}
			<div class="alert alert-success fade in"><button class="close" data-dismiss="alert">×</button><center>{{message}}</center></div>
		{% endif %}
		 <h3>{{objectName}}</h3>
		<form method="post" action="">
		<table class="table table-striped table-bordered table-condensed">
			{%spaceless%}
			{% for keyAttr,value in attributes.items %}
				{% for keyACL,acl in ACLs.items %}
					{% for keyV,virtual in virtuals.items %}
						{% if keyACL == keyAttr and keyACL == keyV and acl %}<tr><td>{{value}}</td>
						{# not so good. Use single value instead of references loop #}
						{% for keyRef,valRef in references.items %}
							{% if keyRef == keyAttr %}
								<td><select name="{{keyAttr}}">
									{% for val in valRef %}
									{% for rdn,value in val.items %}<option value="{{rdn}}" {%for keyD,valD in data.items %}{% if keyD == keyAttr and valD == rdn %}selected="selected"{% endif %}{% endfor %}>{{value}}</option>{% endfor %}
									{% endfor %}
								</select></td>
							{% else %}
							<td><input type={% if keyAttr == 'userPassword' %}"password"{% else %}"text"{% endif %} {% if virtual %}name="Virtual-{{keyAttr}}" id="Virtual-{{keyAttr}}" value="{{virtual.name}}" disabled="disabled"{% else %}name="{{keyAttr}}" id="{{keyAttr}}" value="{%spaceless%}{%for keyD,valD in data.items %}{% if keyD == keyAttr %}{{valD}}{% endif %}{% endfor %}{%endspaceless%}"{% endif %} /></td></tr>
							{% endif %}
						{% empty %}
						<td><input type={% if keyAttr == 'userPassword' %}"password"{% else %}"text"{% endif %} {% if virtual %}name="Virtual-{{keyAttr}}" id="Virtual-{{keyAttr}}" value="{{virtual.name}}" disabled="disabled"{% else %}name="{{keyAttr}}" id="{{keyAttr}}" value=""{% endif %} /></td></tr>
						{% endfor %}
						{% endif %}
					{% endfor %}
				{% endfor %}
			{% endfor %}
			{%endspaceless%}
			<tr><td colspan="2"><center><input type="submit" class="btn" value="add"/></center></td></tr>
		</table>
		</form>
		</div>
	<script type="text/javascript" src="/static/js/jquery.js"></script>
	<script type="text/javascript" src="/static/js/bootstrap-dropdown.js"></script>
	<script type="text/javascript" src="/static/js/bootstrap-modal.js"></script>
	<script type="text/javascript" src="/static/js/bootstrap-alert.js"></script>
	
	<script type="text/javascript" src="/static/js/directory/object.js"></script>
	</body>
</html>
